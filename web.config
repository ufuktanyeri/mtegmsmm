<?xml version="1.0" encoding="UTF-8"?>
<!--
    IIS Configuration for MTEGM SMM Portal
    This file redirects all requests to the wwwroot directory
    and provides security configurations for IIS
-->
<configuration>
    <system.webServer>
        <!-- URL Rewrite Rules -->
        <rewrite>
            <rules>
                <!-- Redirect all requests to wwwroot folder -->
                <rule name="Redirect to wwwroot" stopProcessing="true">
                    <match url="^(.*)$" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- Don't redirect if already in wwwroot -->
                        <add input="{REQUEST_URI}" pattern="^/wwwroot/" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="wwwroot/{R:1}" />
                </rule>

                <!-- Force HTTPS in production (optional) -->
                <!--
                <rule name="Force HTTPS" enabled="true" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{HTTPS}" pattern="^OFF$" />
                        <add input="{HTTP_HOST}" pattern="^(www\.)?mtegmsmm\.meb\.gov\.tr$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
                </rule>
                -->
            </rules>
        </rewrite>

        <!-- Security Headers -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <!-- Content Security Policy (adjust as needed) -->
                <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://code.jquery.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:;" />
            </customHeaders>
        </httpProtocol>

        <!-- Directory Browsing -->
        <directoryBrowse enabled="false" />

        <!-- Default Document -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="index.html" />
                <add value="default.php" />
            </files>
        </defaultDocument>

        <!-- Static Content Compression -->
        <staticContent>
            <!-- Remove ETAG header -->
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />

            <!-- Add MIME types if needed -->
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
            <remove fileExtension=".webp" />
            <mimeMap fileExtension=".webp" mimeType="image/webp" />
        </staticContent>

        <!-- HTTP Errors -->
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <remove statusCode="404" />
            <error statusCode="404" path="/wwwroot/error/404.html" responseMode="ExecuteURL" />
            <remove statusCode="500" />
            <error statusCode="500" path="/wwwroot/error/500.html" responseMode="ExecuteURL" />
        </httpErrors>

        <!-- Security: Request Filtering -->
        <security>
            <requestFiltering>
                <!-- Hidden Segments - Directories that cannot be accessed -->
                <hiddenSegments>
                    <add segment="app" />
                    <add segment="database" />
                    <add segment="includes" />
                    <add segment="vendor" />
                    <add segment="_dev" />
                    <add segment="logs" />
                    <add segment="cache" />
                    <add segment=".git" />
                    <add segment=".vscode" />
                </hiddenSegments>

                <!-- File Extensions to block -->
                <fileExtensions>
                    <add fileExtension=".env" allowed="false" />
                    <add fileExtension=".ini" allowed="false" />
                    <add fileExtension=".log" allowed="false" />
                    <add fileExtension=".sh" allowed="false" />
                    <add fileExtension=".bat" allowed="false" />
                    <add fileExtension=".ps1" allowed="false" />
                    <add fileExtension=".md" allowed="false" />
                    <add fileExtension=".yml" allowed="false" />
                    <add fileExtension=".yaml" allowed="false" />
                    <add fileExtension=".gitignore" allowed="false" />
                </fileExtensions>

                <!-- Request Limits -->
                <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
            </requestFiltering>
        </security>

        <!-- PHP Handler (for IIS with PHP) -->
        <handlers>
            <remove name="php74_via_FastCGI" />
            <remove name="php_via_FastCGI" />
            <remove name="PHP_via_FastCGI" />
            <add name="PHP_via_FastCGI" path="*.php" verb="GET,HEAD,POST,PUT,DELETE" modules="FastCgiModule" scriptProcessor="C:\Program Files\PHP\v8.1\php-cgi.exe" resourceType="Either" requireAccess="Script" />
        </handlers>

        <!-- Compression -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />

        <!-- Caching -->
        <caching enabled="true" enableKernelCache="true">
            <profiles>
                <add extension=".php" policy="DisableCache" kernelCachePolicy="DisableCache" />
                <add extension=".css" policy="CacheUntilChange" kernelCachePolicy="CacheUntilChange" duration="00:30:00" />
                <add extension=".js" policy="CacheUntilChange" kernelCachePolicy="CacheUntilChange" duration="00:30:00" />
                <add extension=".jpg" policy="CacheUntilChange" kernelCachePolicy="CacheUntilChange" duration="7.00:00:00" />
                <add extension=".png" policy="CacheUntilChange" kernelCachePolicy="CacheUntilChange" duration="7.00:00:00" />
            </profiles>
        </caching>
    </system.webServer>

    <!-- PHP Configuration (optional) -->
    <system.web>
        <compilation tempDirectory="~/cache/temp/" />
        <httpRuntime maxRequestLength="51200" executionTimeout="300" /> <!-- 50MB, 5 minutes -->
    </system.web>
</configuration>