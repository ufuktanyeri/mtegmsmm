# MTEGM SMM Portal .htaccess Configuration
# Redirect all requests to wwwroot directory

Options -Indexes
DirectoryIndex index.php index.html

# Enable Rewrite Engine
RewriteEngine On

# Allow direct access to test files in development
RewriteCond %{REQUEST_URI} ^/mtegmsmm/database/migrations/test_
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(.*)$ - [L]

# If the request is not for wwwroot directory, redirect to it
RewriteCond %{REQUEST_URI} !^/mtegmsmm/wwwroot/
RewriteRule ^(.*)$ wwwroot/$1 [L]

# Security Headers
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>