{
    "name": "mtegmsmm/clean-portal",
    "description": "MTEGM SMM Portal - Clean MVC Implementation",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers/functions.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "php _dev/tools/phpstan.phar analyse",
        "phpstan:pro": "php _dev/tools/phpstan.phar analyse --pro",
        "start": "php -S localhost:8000 -t wwwroot",
        "minify": "php _dev/scripts/minify-assets.php",
        "minify:force": "php _dev/scripts/minify-assets.php --force"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
