# MTEGM SMM Portal - URL Routing Configuration
# This file handles all URL requests and routes them through index.php

# Enable URL rewriting
RewriteEngine On

# Prevent direct access to .htaccess file
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

# Route all requests through index.php
# Skip existing files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect everything to index.php with url parameter
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Disable directory browsing for security
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8